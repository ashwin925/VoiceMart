rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Product images - public read, admin write
    match /products/{allPaths=**} {
      allow read: if true; // Public read access for product images
      allow write: if isAdmin(); // Only admins can upload/delete product images
    }
    
    // Category images - public read, admin write
    match /categories/{allPaths=**} {
      allow read: if true; // Public read access for category images
      allow write: if isAdmin(); // Only admins can upload/delete category images
    }
    
    // User profile images - users can manage their own images
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary uploads - authenticated users only
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
